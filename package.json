{
  "name": "portainer-cli-deployer",
  "description": "CLI tool to easily deploy a container stacks to Portainer",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/riccardotornesello/portainer-cli-deployer.git"
  },
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "portainer-cli-deployer": "dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsup",
    "dev": "ts-node src/index.ts",
    "format": "prettier --write '!./data' ."
  },
  "dependencies": {
    "@inquirer/prompts": "^4.2.1",
    "axios": "^1.6.5",
    "cli-table": "^0.3.11",
    "commander": "^12.0.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.3",
    "@semantic-release/npm": "^12.0.0",
    "@types/cli-table": "^0.3.4",
    "@types/uuid": "^9.0.8",
    "prettier": "^3.2.5",
    "semantic-release": "^23.0.7",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  }
}
